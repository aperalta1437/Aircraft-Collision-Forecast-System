<MessagePopup>:
    back_color: 0,0,0,1

    Label:
        text: root.message
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2, "top": 0.8}

    Button:
        text: "Close"
        size_hint: 0.35, 0.3
        pos_hint: {"x": 0.33, "y": 0.1}
        on_release: root.popup_window.dismiss()


<YesNoPopup>:
    back_color: 0,0,0,1
    size_hint: 0.9, 0.8

    Label:
        text: root.question
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2, "top": 0.8}

    Button:
        text: "No"
        size_hint: 0.35, 0.3
        pos_hint: {"x": 0.13, "y": 0.1}
        on_release: root.set_answer(False)

    Button:
        text: "Yes"
        size_hint: 0.35, 0.3
        pos_hint: {"x": 0.53, "y": 0.1}
        on_release: root.set_answer(True)


<LoadingPopup>:
    progress_bar: progress_bar
    stage_name: stage_name
    back_color: 0,0,0,1
    size_hint: 1, 1

    Label:
        id: stage_name
        size_hint: 0.9, 0.2
        pos_hint: {"x": 0.05, "y": 0.7}

    ProgressBar:
        id: progress_bar
        size_hint: 0.9, 0.8
        pos_hint: {"x": 0.05, "y": 0}
