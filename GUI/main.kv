#:include locations_mapview.kv
#:include settings_panel_view.kv
#:include popups.kv
#:include login_view.kv
#:include settings_view.kv



<MainLayout>:

    btn_toggle_airports: btn_toggle_airports
    btn_toggle_airplanes: btn_toggle_airplanes
    locations_map: locations_map
    airports_dropdown: airports_dropdown.__self__
    settings_panel: settings_panel


    NewBoxLayout:
        size: root.width, root.height
        orientation: "horizontal"
        padding: 17
        spacing: 10
        back_color: 200/255.0, 200/255.0, 200/255.0, 255/255.0

        NewBoxLayout:
            orientation: "vertical"

            SettingsPanelView:
                id: settings_panel

            LocationsMapView:
                id: locations_map

        NewFloatLayout:

            canvas:
                Color:
                    rgb: 200/255.0, 200/255.0, 200/255.0, 255/255.0

                Rectangle:
                    pos: self.x , self.height * 0.095
                    size: self.width, 18

                Rectangle:
                    pos: self.x , self.height * 0.25
                    size: self.width, 18

            id: main_menu_layout
            cols: 2
            size_hint: 0.5, 1
            back_color: 220/255.0, 220/255.0, 220/255.0, 255/255.0
            spacing: 10

            Label:
                color: 0,0,0,1
                font_size: "20sp"
                size_hint: 0.37, 0.05
                pos_hint: {"x": 0.05, "y": 0.18}
                text: "{:<20s}".format("Zoom level: " + str(locations_map.zoom))

            Button:
                id: btn_dropdown
                on_parent: airports_dropdown.dismiss()
                on_text: airports_dropdown.open(btn_dropdown)
                height: '48dp'
                pos_hint: {"x": 0.33, "y": 0.94}
                size_hint: 0.65, 0.05

            DropDown:
                id: airports_dropdown
                on_select: btn_dropdown.text = '{}'.format(args[1])

                Button:
                    text: 'First Item'
                    size_hint_y: None
                    height: '48dp'
                    on_release: airports_dropdown.select('First Item')

                Label:
                    text: 'Second Item'
                    size_hint_y: None
                    height: '48dp'

                Button:
                    text: 'Third Item'
                    size_hint_y: None
                    height: '48dp'
                    on_release: airports_dropdown.select('Third Item')

            Label:
                color: 0,0,0,1
                font_size: "20sp"
                pos_hint: {"x": 0.02, "y": 0.94}
                size_hint: 0.3, 0.05
                text: "IATA Code:"

            ToggleButton:
                id: btn_toggle_airports
                size_hint: 0.47, 0.05
                pos_hint: {"x": 0.02, "y": 0.11}
                text: "Show Airports" if btn_toggle_airports.state == "normal" else "Hide Airports"
                on_press: root.toggle_airports()

            ToggleButton:
                id: btn_toggle_airplanes
                size_hint: 0.47, 0.05
                pos_hint: {"x": 0.51, "y": 0.11}
                text: "Show Airplanes" if btn_toggle_airplanes.state == "normal" else "Hide Airplanes"
                on_press: root.toggle_airplanes()

            Button:
                id: btn_settings
                size_hint: 0.47, 0.05
                pos_hint: {"x": 0.02, "y": 0.01}
                text: "Settings"
                font_size: "18sp"
                on_release: root.open_settings_window()

            Button:
                id: btn_exit
                size_hint: 0.47, 0.05
                pos_hint: {"x": 0.51, "y": 0.01}
                text: "Exit"
                font_size: "20sp"
                bold: True
                on_release: root.close_app()