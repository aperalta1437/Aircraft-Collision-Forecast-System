<SettingsView>:

    btn_toggle_login_window: btn_toggle_login_window
    back_color : 50/255.0, 50/255.0, 50/255.0, 255/255.0
    size_hint: 0.9, 0.8

    Label:
        text: 'Login Window'
        size_hint: 0.25, 0.2
        pos_hint: {"x": 0.15, "top": 0.8}
        font_size: "24sp"

    ToggleButton:
        id: btn_toggle_login_window
        size_hint: 0.3, 0.13
        pos_hint: {"x": 0.55, "y": 0.65}
        text: 'ON'
        state: 'down'
        font_size: "26sp"
        on_press: root.turn_login_window()

    Button:
        text: "Close"
        size_hint: 0.40, 0.17
        font_size: "26sp"
        pos_hint: {"x": 0.07, "y": 0.1}
        on_release: root.close_window()

    Button:
        text: "Save"
        size_hint: 0.40, 0.17
        font_size: "26sp"
        pos_hint: {"x": 0.53, "y": 0.1}
        on_release: root.save_settings()
